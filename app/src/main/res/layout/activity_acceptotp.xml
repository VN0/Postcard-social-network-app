<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.dopechat.grv.dopechat.AcceptOtpActivity"
    android:background="@color/white">

    <include layout="@layout/toolbar_enter_mobileno" android:id="@+id/toolbar_enter_mobileno"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/party"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/toolbar_enter_mobileno"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:textColor="#000000"
        android:text="What's your mobile number?"
        android:textSize="20sp"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/subdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="One-time password will be sent to this number"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <com.lamudi.phonefield.PhoneInputLayout
        android:id="@+id/phone_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_below="@id/subdesc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/otp_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:visibility="gone"
        android:drawableLeft="@drawable/ic_phone_phone_black_24dp"
        android:drawablePadding="15dp"
        android:hint="Enter OTP"
        android:layout_below="@id/subdesc"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send OTP"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:background="@drawable/button_startactivity_style"
        android:textColor="@color/white"
        android:id="@+id/button_sendotp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"

        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"

        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/button_startactivity_style"
        android:textColor="@color/white"
        android:id="@+id/button_submitotp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>

